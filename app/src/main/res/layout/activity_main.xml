<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.comsic.orawon.myfristapp.MainActivity"
    android:background="@drawable/bg8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txttile"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_orange_light"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/h1"
        android:id="@+id/txtTitleLiv" />

    <Button
        android:text="@string/MoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMoreInfo"
        android:onClick="onCickMoreInfo"
        android:layout_alignParentBottom="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtTitleLiv"
        android:layout_above="@+id/btnMoreInfo"
        android:id="@+id/livTraffic"
        android:background="#c3ffffff"
        android:layout_margin="@dimen/my_morgin" />
</RelativeLayout>
